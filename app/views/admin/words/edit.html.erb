<%= provide :title, t("admin.words.edit") %>

<div class="col-md-4 col-md-offset-4">
  <%= form_for [:admin, @word] do |f| %>
    <p><%= f.label t("admin.words.content") %></p>
    <p><%= f.text_field :content, class: "form-control" %></p>
    <p><%= f.label t("admin.words.category") %></p>
    <p>
      <%= f.select :category_id,
        @categories.collect {|category| [category.name, category.id]},
        {include_blank: false}, {class: "form-control"} %>
    </p>
    <p>
      <%= link_to_add_fields t("admin.words.add_answer"), f, :word_answers %>
    </p>
    <%= f.fields_for :word_answers do |builder| %>
      <%= render "word_answer_fields", f: builder %>
    <% end %>
    <%= f.submit t("admin.words.save_changes"),
      class: "btn btn-default col-md-offset-4" %>
  <% end %>
</div>
