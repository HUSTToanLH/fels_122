<% provide :title, t("views.all_users") %>
<h1><%= t "views.all_users" %></h1>

<%= form_for users_path, method: :get do |f| %>
  <p>
    <%= text_field_tag :s_name, params[:s_name],
      placeholder: t("views.search_users") %>
    <%= check_box_tag :s_admin, :admin,
      (true if params[:s_admin] == "admin") %>
    <%= t "views.search.admin" %>
    <%= check_box_tag :s_user, :user,
      (true if params[:s_user] == "user") %>
    <%= t "views.search.user" %>
    <h4>
      <%= submit_tag t("views.search.submit"), name: nil %>
    </h4>
  </p>
<% end %>

<div class="row">
  <div class="col-md-12">
    <li class="list-group-item active"><%= t "views.all_users" %></li>
    <% if @users.present? %>
      <ul class="list-group">
        <% if @users.any? %>
          <%= render @users %>
        <% else %>
          <li class="list-group-item">
            <h4>
              <span class="text-info"><%= t "views.no_user" %></span>
            </h4>
          </li>
        <% end %>
      </ul>
      <%= will_paginate @users %>
    <% else %>
      <li class="list-group-item">
        <h4>
          <span class="text-info"><%= t "views.no_user" %></span>
        </h4>
      </li>
    <% end %>
  </div>
</div>
