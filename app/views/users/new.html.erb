<% provide :title, t("views.signup.signup") %>
<h1><%= t "views.signup.signup" %></h1>

<div class = "row">
  <div class= "col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= f.label :name, t("views.signup.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("views.signup.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("views.signup.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("views.signup.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("views.signup.submit"), class: "btn btn-default col-md-3" %>
    <% end %>

  </div>
</div>
