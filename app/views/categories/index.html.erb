<%= provide :title, t("views.layouts.categories") %>
<% @categories.each_with_index do |category, index| %>
  <% if index.odd? %>
    <%= render "right" %>
    <%= render partial: "left", locals: {category: category} %>
  <% else %>
    <%= render partial: "left", locals: {category: category} %>
    <%= render "right" %>
  <% end %>
<% end %>
