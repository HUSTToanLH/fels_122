<h2 class="text-center">
  <strong><%= t "views.lessons.questions" %></strong>
  <hr>
</h2>
<%= form_for @lesson do |f| %>
  <%= f.fields_for :lesson_words do |lesson_word| %>
    <ul class="list-unstyled">
      <li>
        <%= lesson_word.label :question,
          @words.at(lesson_word.index).content %>
      </li>
      <% @words.at(lesson_word.index).word_answers.each do |answer| %>
        <li>
          <%= lesson_word.radio_button :word_answer_id, answer.id %>
          <%= answer.content %>
          <%= lesson_word.hidden_field :word_id, value: answer.word_id %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= f.submit t("views.lessons.submit"), class: "btn btn-default" %>
<% end %>
